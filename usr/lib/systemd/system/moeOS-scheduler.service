[Unit]
Description=moeOS scx_sched schedulers
StartLimitIntervalSec=30
StartLimitBurst=2
Conflicts=scx.service scx_loader.service

[Service]
Type=simple
ExecStart=/usr/bin/scx_cosmos --no-deferred-wakeup --cpu-busy-thresh 50 --disable-cpufreq --preferred-idle-scan --primary-domain powersave
#ExecStart=/usr/bin/scx_flash --native-priority --no-builtin-idle
CPUWeight=500
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target